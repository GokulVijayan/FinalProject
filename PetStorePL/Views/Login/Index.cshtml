
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <br />
    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("Username")
        </div>
        <div class="col-md-10">
            @Html.TextBox("Username","", new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("Password")
        </div>
        <div class="col-md-10">
            @Html.TextBox("Password","", new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submit" value="Login" class="btn btn-default" />
        </div>
        </div>
}

