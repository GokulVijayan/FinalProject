@model IEnumerable<PetStorePL.ViewModel.PetDetailsViewModel>
@{
    Layout = "~/Views/Shared/_MyAdminLayout.cshtml";
}
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <br />
    @Html.Label("Pet Type")
    @Html.TextBox("search")<input type="submit"
                                  name="submit"
                                  value="Search" />
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreedType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PetName)
        </td>
        <td>
        <img src="~/Images/@Url.Content(item.ImagePath)" alt="Image" width="200px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BreedType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PetType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Find", new { petName = item.PetName, breedType = item.BreedType,operation="Edit" }) |
            @Html.ActionLink("Delete", "Find", new { petName = item.PetName, breedType = item.BreedType, operation = "Delete" }, new { onclick = "return confirm('Are sure wants to delete?');" })
        </td>
    </tr>
}

</table>
